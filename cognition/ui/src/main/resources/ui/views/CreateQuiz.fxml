<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.controllers.CreateQuizController">
    <children>
        <HBox prefHeight="100.0">
            <children>
                <VBox prefHeight="102.0" prefWidth="304.0">
                    <children>
                        <Text fx:id="cqHeading" strokeType="OUTSIDE" strokeWidth="0.0" text="Create quiz"/>
                        <HBox prefHeight="100.0">
                            <children>
                                <Label prefWidth="200.0" text="Quiz name"/>
                                <TextField fx:id="name"/>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0">
                            <children>
                                <Label prefWidth="300.0" text="Short description"/>
                                <TextField fx:id="description"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox prefHeight="100.0" prefWidth="281.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Flashcards" wrappingWidth="266.388671875"/>
                        <ScrollPane prefHeight="200.0" prefWidth="600.0" fx:id="flashcardPane">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="262.0">
                                    <!-- Dynamically populate ScrollPane with FlashcardNodes -->
                                </AnchorPane>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>

    <Text strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="267"
          fx:id="feedback"/>
</AnchorPane>
