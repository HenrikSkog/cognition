<AnchorPane prefHeight="745.0" prefWidth="922.0" style="-fx-background-color: #FCB751;"
            stylesheets="@../../styles/dashboard.css" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="745.0" prefWidth="922.0">
        <HBox alignment="CENTER" prefHeight="56.0" prefWidth="600.0" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" prefHeight="57.0" prefWidth="136.0"
                  style="-fx-background-color: #fff; -fx-padding: 20; -fx-background-radius: 20 0 0 20;">
                <ImageView fitHeight="33.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../img/logo.png"/>
                    </image>
                </ImageView>
                <Text fx:id="dashboardLogo" fill="#5c5353" strokeType="OUTSIDE" strokeWidth="0.0"
                      styleClass="logo" text="Cognition">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Text>
            </HBox>
            <HBox alignment="CENTER" prefHeight="73.0" prefWidth="490.0" style="-fx-background-color: #fff;">
                <Button mnemonicParsing="false" onAction="#handleDashboard" styleClass="nav_link"
                        text="Home"/>
                <Button mnemonicParsing="false" onAction="#handleMyQuizzes" styleClass="nav_link"
                        text="My quizzes">
                    <graphic>
                        <FontAwesomeIconView fill="#626262" glyphName="BOOKMARK"/>
                    </graphic>
                </Button>
                <Button fx:id="createQuizButtonNavbar" mnemonicParsing="false" styleClass="nav_link"
                        text="Create quiz">
                    <graphic>
                        <FontAwesomeIconView fill="#626262" glyphName="PLUS"/>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" styleClass="nav_link" text="Leaderboard">
                    <graphic>
                        <FontAwesomeIconView fill="#626262" glyphName="LIST_OL"/>
                    </graphic>
                </Button>
            </HBox>
            <HBox alignment="CENTER" prefHeight="67.0" prefWidth="188.0"
                  style="-fx-background-color: #fff; -fx-padding: 15px; -fx-background-radius: 0 20 20 0;">
                <Pane prefHeight="13.0" prefWidth="114.0">
                    <children>
                        <Text fill="#626262" layoutX="28.0" layoutY="26.0" strokeType="OUTSIDE"
                              strokeWidth="0.0" styleClass="dropdown" text="Username"/>
                        <FontAwesomeIconView fill="#626262" glyphName="CHEVRON_DOWN" layoutX="88.0"
                                             layoutY="27.0"/>
                    </children>
                </Pane>
                <Button fx:id="signOutButton" mnemonicParsing="false" onAction="#handleLogout"
                        text="Sign out"/>
            </HBox>
        </HBox>
        <HBox alignment="CENTER" prefHeight="73.0" prefWidth="490.0" style="-fx-background-color: #fff;">
            <Button mnemonicParsing="false" onAction="#handleDashboard" styleClass="nav_link" text="Home"/>
            <Button mnemonicParsing="false" onAction="#handleMyQuizzes" styleClass="nav_link" text="My quizzes">
                <graphic>
                    <FontAwesomeIconView fill="#626262" glyphName="BOOKMARK"/>
                </graphic>
            </Button>
            <Button fx:id="createQuizButtonNavbar" onAction="#handleCreateQuiz" mnemonicParsing="false"
                    styleClass="nav_link" text="Create quiz">
                <graphic>
                    <FontAwesomeIconView fill="#626262" glyphName="PLUS"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" styleClass="nav_link" text="Leaderboard">
                <graphic>
                    <FontAwesomeIconView fill="#626262" glyphName="LIST_OL"/>
                </graphic>
            </Button>
        </HBox>
        <HBox alignment="CENTER" prefHeight="67.0" prefWidth="188.0"
              style="-fx-background-color: #fff; -fx-padding: 15px; -fx-background-radius: 0 20 20 0;">
            <Pane prefHeight="13.0" prefWidth="114.0">
                <Text fill="#626262" layoutX="28.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      styleClass="dropdown" text="Username"/>
                <FontAwesomeIconView fill="#626262" glyphName="CHEVRON_DOWN" layoutX="88.0" layoutY="27.0"/>
            </Pane>
        </HBox>
        <HBox alignment="CENTER" prefHeight="615.0" prefWidth="922.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <VBox prefHeight="643.0" prefWidth="655.0" styleClass="container">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <HBox.margin>
                    <Insets top="50.0"/>
                </HBox.margin>
                <VBox prefHeight="116.0" prefWidth="655.0">
                    <Text fx:id="heading" fill="#5c5353" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title"
                          text="Create new quiz" wrappingWidth="653.2154846191406">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                    </Text>
                    <VBox alignment="CENTER" prefHeight="20.0" prefWidth="655.0">
                        <Rectangle fill="#f9ad3c" height="5.0" smooth="false" stroke="BLACK" strokeMiterLimit="0.0"
                                   strokeType="INSIDE" strokeWidth="0.0" width="46.0"/>
                    </VBox>
                </VBox>


                <HBox prefHeight="374.0" prefWidth="655.0">
                    <VBox prefHeight="102.0" prefWidth="304.0">
                        <HBox prefHeight="43.0" prefWidth="304.0">
                            <Label fx:id="feedback" alignment="CENTER" prefHeight="17.0" prefWidth="304.0"
                                   textFill="RED"/>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0">
                            <Label prefWidth="200.0" text="Quiz name"/>
                            <TextField fx:id="name"/>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0">
                            <Label prefWidth="300.0" text="Short description"/>
                            <TextField fx:id="description"/>
                        </HBox>
                    </VBox>
                    <VBox prefHeight="100.0" prefWidth="281.0">
                        <Text fx:id="flashcardsText" strokeType="OUTSIDE" strokeWidth="0.0" text="Flashcards"
                              wrappingWidth="266.388671875"/>
                        <ScrollPane fx:id="flashcardPane" prefHeight="360.0" prefWidth="281.0">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="262.0">
                                <!-- Dynamically populate ScrollPane with FlashcardNodes -->
                            </AnchorPane>
                        </ScrollPane>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
        <Button fx:id="storeQuizButton" mnemonicParsing="false" onAction="#handleStoreQuiz" text="Create quiz"/>
    </VBox>
</AnchorPane>
