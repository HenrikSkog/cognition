<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="745.0" prefWidth="922.0" style="-fx-background-color: #FCB751;"
            stylesheets="@../../styles/dashboard.css" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" >
    <VBox prefHeight="745.0" prefWidth="922.0">
        <children>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="600.0" style="-fx-padding: 20;">
                <children>
                    <HBox alignment="CENTER_LEFT" prefHeight="57.0" prefWidth="136.0"
                          style="-fx-background-color: #fff; -fx-padding: 20; -fx-background-radius: 20 0 0 20;">
                        <children>
                            <ImageView fitHeight="33.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../img/logo.png"/>
                                </image>
                            </ImageView>
                            <Text fx:id="dashboardLogo" fill="#5c5353" strokeType="OUTSIDE" strokeWidth="0.0"
                                  styleClass="logo" text="Cognition">
                                <HBox.margin>
                                    <Insets left="5.0"/>
                                </HBox.margin>
                                <font>
                                    <Font name="System Bold" size="13.0"/>
                                </font>
                            </Text>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="73.0" prefWidth="490.0" style="-fx-background-color: #fff;">
                        <children>
                            <Button fx:id="goHome" mnemonicParsing="false" onAction="#handleDashboard" styleClass="nav_link"
                                    text="Home"/>
                            <Button mnemonicParsing="false" styleClass="nav_link" text="My quizzes">
                                <graphic>
                                    <FontAwesomeIconView fill="#626262" glyphName="BOOKMARK"/>
                                </graphic>
                            </Button>
                            <Button fx:id="createQuizButton" mnemonicParsing="false" onAction="#handleCreateQuiz"
                                    styleClass="nav_link" text="Create quiz">
                                <graphic>
                                    <FontAwesomeIconView fill="#626262" glyphName="PLUS"/>
                                </graphic>
                            </Button>
                            <Button mnemonicParsing="false" styleClass="nav_link" text="Leaderboard">
                                <graphic>
                                    <FontAwesomeIconView fill="#626262" glyphName="LIST_OL"/>
                                </graphic>
                            </Button>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="67.0" prefWidth="188.0"
                          style="-fx-background-color: #fff; -fx-padding: 15px; -fx-background-radius: 0 20 20 0;">
                        <children>
                            <Pane prefHeight="13.0" prefWidth="114.0">
                                <children>
                                    <Text fill="#626262" layoutX="28.0" layoutY="26.0" strokeType="OUTSIDE"
                                          strokeWidth="0.0" styleClass="dropdown" text="Username"/>
                                    <FontAwesomeIconView fill="#626262" glyphName="CHEVRON_DOWN" layoutX="88.0"
                                                         layoutY="27.0"/>
                                </children>
                            </Pane>
                        </children>
                    </HBox>
                </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="615.0" prefWidth="922.0">
                <children>
                    <VBox prefHeight="562.0" prefWidth="771.0" styleClass="container">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                        <HBox.margin>
                            <Insets top="50.0"/>
                        </HBox.margin>
                        <children>
                            <VBox prefHeight="116.0" prefWidth="655.0">
                                <children>
                                    <Text fx:id="heading" fill="#5c5353" strokeType="OUTSIDE" strokeWidth="0.0"
                                          styleClass="title" text="Quiz" wrappingWidth="770.1315002441406">
                                        <VBox.margin>
                                            <Insets top="10.0"/>
                                        </VBox.margin>
                                    </Text>
                                    <VBox alignment="CENTER" prefHeight="20.0" prefWidth="655.0">
                                        <children>
                                            <Rectangle fill="#f9ad3c" height="5.0" smooth="false" stroke="BLACK"
                                                       strokeMiterLimit="0.0" strokeType="INSIDE" strokeWidth="0.0"
                                                       width="46.0"/>
                                        </children>
                                    </VBox>
                                </children>
                            </VBox>


                            <HBox prefHeight="374.0" prefWidth="655.0">
                                <VBox prefHeight="231.0" prefWidth="212.0">
                                    <HBox alignment="CENTER" prefHeight="59.0" prefWidth="212.0">
                                        <children>
                                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description"
                                                  wrappingWidth="210.21337890625"/>
                                        </children>
                                    </HBox>
                                    <Text fx:id="description" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="374.0" prefWidth="549.0">
                                    <children>
                                        <AnchorPane prefHeight="303.0" prefWidth="426.0">
                                            <children>
                                                <Pane layoutX="102.0" layoutY="59.0" prefHeight="200.0"
                                                      prefWidth="340.0" styleClass="flashcard">
                                                    <children>
                                                        <Text fx:id="flashcardText" layoutX="157.0" layoutY="51.0"
                                                              strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
                                                        <Button fx:id="submitAnswer" layoutX="253.0" layoutY="144.0"
                                                                mnemonicParsing="false" onAction="#checkAnswer"
                                                                text="Check"/>
                                                        <TextField fx:id="answerInput" layoutX="38.0" layoutY="144.0"
                                                                   prefHeight="27.0" prefWidth="189.0"
                                                                   promptText="Answer"/>
                                                    </children>
                                                </Pane>
                                                <Label fx:id="feedback" layoutX="262.0" layoutY="36.0"/>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </VBox>
                            </HBox>
                        </children>
                    </VBox>
                </children>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </HBox>
        </children>
    </VBox>
</AnchorPane>
